{
  "default-runtime": "runc",
  "runtimes": {
    "runsc-ptrace": {
      "path": "/var/usrlocal/bin/runsc",
      "runtimeArgs": [
        "--platform=ptrace",
        "--network=host"
      ]
    },
    "runsc-kvm": {
      "path": "/var/usrlocal/bin/runsc",
      "runtimeArgs": [
        "--platform=kvm",
        "--network=host"
      ]
    }
  }
}
